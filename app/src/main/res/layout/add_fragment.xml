<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="swin.android.suntime.ui.AddFragment">
    <TextView
        android:id="@+id/locName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:text="Location's name:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/locText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/locName"
        android:layout_below="@+id/locName"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter location's name here"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/latNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/locText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:text="Latitude:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/latText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter location's latitude here"
        android:inputType="textPersonName"
        android:layout_below="@+id/latNum"
        android:layout_alignStart="@+id/latNum"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/logNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/latText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:text="Longtitude:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/logText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter location's longtitude here"
        android:layout_below="@+id/logNum"
        android:layout_alignStart="@+id/logNum"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tzName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/logText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:text="Timezone:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tzText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter location's timezone here"
        android:layout_below="@+id/tzName"
        android:layout_alignStart="@+id/tzName" />

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tzText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="sans-serif"
        android:text="SUBMIT"
        android:textAlignment="center" />

</RelativeLayout>
